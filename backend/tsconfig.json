{
  "compilerOptions": {
    "target": "ES2016",                              
    "module": "commonjs",                                
    "lib": ["es6"],                                      
    "allowJs": true,
    "outDir": "./dist",                                  
    "rootDir": "./",                                   

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "moduleResolution": "node",
    "esModuleInterop": true,                             
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/app.ts", "src/**/*"],                  
  "exclude": ["node_modules"]
}